# Hair Try-On Service Environment Configuration

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=growup

# Service Configuration
DEBUG=false
SERVICE_NAME=hair-tryOn-service
SERVICE_VERSION=1.0.0

# File Upload Configuration
MAX_VIDEO_SIZE=50000000
MAX_VIDEO_DURATION=10
UPLOAD_DIR=/app/uploads
TEMP_DIR=/app/temp

# AI Model Configuration
MODEL_PATH=/app/models
HAIR_MODEL_NAME=hair_fastgan_model.pth

# Replicate API Configuration (Get free token from https://replicate.com/account/api-tokens)
REPLICATE_API_TOKEN=your_replicate_api_token_here
USE_REPLICATE_API=true

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=100
WEBSOCKET_TIMEOUT=300

# Performance Configuration
FRAME_SAMPLING_RATE=0.5
TARGET_LATENCY_MS=200

# Logging Configuration
LOG_LEVEL=INFO