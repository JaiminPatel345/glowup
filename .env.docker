# Environment Configuration for Docker Compose
# This file contains Docker-specific service names

# ============================================================================
# NODE ENVIRONMENT
# ============================================================================
NODE_ENV=development

# ============================================================================
# DATABASE CONFIGURATION (Docker service names)
# ============================================================================

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=growup
POSTGRES_USER=postgres
POSTGRES_PASSWORD=root123

# MongoDB Configuration
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DB=growup

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================================================
# SERVICE URLS (Docker service names)
# ============================================================================

# Authentication Service
AUTH_SERVICE_HOST=auth-service
AUTH_SERVICE_PORT=3001

# User Service
USER_SERVICE_HOST=user-service
USER_SERVICE_PORT=3002

# Skin Analysis Service
SKIN_SERVICE_HOST=skin-analysis-service
SKIN_SERVICE_PORT=3003

# Hair Try-On Service
HAIR_SERVICE_HOST=hair-tryOn-service
HAIR_SERVICE_PORT=3004

# ============================================================================
# API GATEWAY
# ============================================================================
GATEWAY_PORT=3000
GATEWAY_MIDDLEWARE_PORT=3001

# ============================================================================
# SECURITY
# ============================================================================
JWT_SECRET=your_jwt_secret_key_change_in_production #ggignore
JWT_EXPIRES_IN=7d

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
