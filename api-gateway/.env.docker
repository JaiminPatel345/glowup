# API Gateway - Docker env
# Gateway listens on port 80 inside container, map to host via GATEWAY_PORT
GATEWAY_PORT=3000
GATEWAY_MIDDLEWARE_PORT=3005
NODE_ENV=development

# Service hostnames (Docker)
AUTH_SERVICE_HOST=auth-service
AUTH_SERVICE_PORT=3001
USER_SERVICE_HOST=user-service
USER_SERVICE_PORT=3002
SKIN_SERVICE_HOST=skin-analysis-service
SKIN_SERVICE_PORT=3003
HAIR_SERVICE_HOST=hair-tryon-service
HAIR_SERVICE_PORT=3004

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Logging
LOG_LEVEL=info
